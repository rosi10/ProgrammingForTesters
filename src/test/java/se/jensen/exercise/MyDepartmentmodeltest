package se.jensen.exercise.department.client;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.EqualsAndHashCode;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.NonNull;
import lombok.ToString;
import org.junit.Assert;
import org.junit.Test;
import se.jensen.api.DepartmentModel;
import se.jensen.entity.Department;
import se.jensen.exercise.test.builder.DepartmentTestBuilder;


public class MyDepartmentmodeltest {
    @Test
    public void testTogetBuilder(){

        Integer departmentId = 1;
        String departmentName ="IT";

        Department department= Department.builder()
                .departmentId(departmentId)
                .departmentName(departmentName)
                .build();
        Assert.assertEquals(departmentId,department.getDepartmentId());
        Assert.assertEquals(departmentName,department.getDepartmentName());
    }
    @Test
    public void testToString(){
        String expectedToString= DepartmentModel.builder()
                .departmentId(2)
                .departmentName("Economy")
                .build()
                .toString();
        DepartmentModel departmentModel = DepartmentModel.builder()
                .departmentId(2)
                .departmentName("Economy")
                .build();
        System.out.println(departmentModel);
        Assert.assertEquals(expectedToString,departmentModel.toString());


    }
}
